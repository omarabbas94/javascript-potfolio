var user = prompt('Hey, you ready to play?').toLowerCase();

switch (user) {
    case 'yes':
        var speed = prompt('are you fast?').toLowerCase();
        var strength = prompt('are you strong enough').toLowerCase();
        if (strength === 'yes' || speed === 'yes') {

            console.log("great lets see what you got");
        }
        else {
            console.log('sorry you aint ready');
        }
        break;
    case 'no':
        var train = prompt('have you trained for this').toLowerCase();
        var studied = prompt('any strategies').toLowerCase();
        if (studied === 'no' && train === 'no') {
            console.log("Okay maybe another time");
        }
        else {
            console.log('maybe you are ready then');
        }
        break;


    case 'im not sure':
        console.log(' think about it and come back');
        break;
    default:
        console.log(" answer correctly muggle");
        break;
}
